<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    tools:context=".RegistrationActivity">

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/movie_time_logo"/>

    <TextView
        android:id="@+id/tv_brand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-15dp"
        android:fontFamily="@font/quicksand_bold"
        android:letterSpacing="0.1"
        android:text="MOVIE TIME"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="36sp"
        android:textStyle="bold"
        android:layout_below="@+id/iv_logo"/>

    <TextView
        android:id="@+id/tv_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:letterSpacing="0.1"
        android:text="REGISTER"
        android:textColor="@color/colorPrimary"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tv_brand"/>

    <EditText
        android:id="@+id/et_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        android:hint="Username"
        android:textColorHint="@color/colorAccent"
        android:layout_marginTop="15dp"
        android:layout_below="@id/tv_register"/>

    <TextView
        android:id="@+id/tv_dob"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:textColor="@color/colorAccent"
        android:textSize="18sp"
        android:text="Date of Birth"
        android:layout_marginTop="10dp"
        android:layout_below="@id/et_username"/>

    <Button
        android:id="@+id/btn_dob"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:textSize="12sp"
        android:text="Pick a date"
        android:layout_toEndOf="@id/tv_dob"
        android:layout_below="@id/et_username"/>

    <TextView
        android:id="@+id/tv_gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorAccent"
        android:textSize="18sp"
        android:text="Gender:"
        android:layout_marginTop="5dp"
        android:layout_below="@id/btn_dob"/>

    <RadioGroup
        android:id="@+id/rg_gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/tv_gender">

        <RadioButton
            android:id="@+id/rb_male"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Male"
            android:textSize="18sp"/>

        <RadioButton
            android:id="@+id/rb_female"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Female"
            android:textSize="18sp"
            android:layout_marginLeft="100dp"
            android:layout_toEndOf="@id/rb_male"/>

    </RadioGroup>

    <EditText
        android:id="@+id/et_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        android:inputType="textEmailAddress"
        android:hint="Email"
        android:textColorHint="@color/colorAccent"
        android:layout_below="@id/rg_gender"/>

    <EditText
        android:id="@+id/et_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        android:inputType="phone"
        android:hint="Phone Number"
        android:textColorHint="@color/colorAccent"
        android:layout_below="@id/et_email"/>

    <EditText
        android:id="@+id/et_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        android:hint="Address"
        android:textColorHint="@color/colorAccent"
        android:layout_below="@id/et_number"/>

    <EditText
        android:id="@+id/et_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        android:inputType="textPassword"
        android:hint="Password"
        android:textColorHint="@color/colorAccent"
        android:layout_below="@id/et_address"/>

    <EditText
        android:id="@+id/et_confirmPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        android:inputType="textPassword"
        android:hint="Confirm Password"
        android:textColorHint="@color/colorAccent"
        android:layout_below="@id/et_password"/>

    <CheckBox
        android:id="@+id/cb_agreement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="Terms and Condition"
        android:layout_below="@id/et_confirmPassword"/>

    <Button
        android:id="@+id/btn_register"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="REGISTER"
        android:textColor="#ffffff"
        android:backgroundTint="@color/colorPrimary"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/cb_agreement"/>

</RelativeLayout>